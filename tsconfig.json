{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react-native",
        "lib": ["es2020", "esnext"],
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": true,
        "strict": true,
        "target": "es2020",
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@assets/*": ["./src/assets/*"],
            "@lib/*": ["./src/lib/*"],
            "@res/*": ["./src/res/*"],
            "@components/*": ["./src/components/*"],
            "@screens/*": ["./src/screens/*"],
            "@modals/*": ["./src/modals/*"],
            "@src/*": ["./src/*"]
        }
    },
    "typeRoots": ["./src/res/types"],
    "exclude": ["node_modules", "metro.config.js", "jest.config.js"]
}
